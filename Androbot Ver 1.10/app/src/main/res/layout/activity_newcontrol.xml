<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/bg2"
    android:paddingBottom="26dp"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".Control" >

    <ImageButton
        android:id="@+id/ib2"
        android:hapticFeedbackEnabled="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/down"
        android:layout_alignBottom="@+id/info4"
        android:layout_alignLeft="@+id/info4"
        android:layout_alignStart="@+id/info4" />

    <ImageButton
        android:id="@+id/ib4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="invisible"
        android:src="@drawable/left"
        android:hapticFeedbackEnabled="true"
        android:layout_alignTop="@+id/info3"
        android:layout_toLeftOf="@+id/info3"
        android:layout_toStartOf="@+id/info3" />

    <ImageButton
        android:id="@+id/ib1"
        android:hapticFeedbackEnabled="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/up"
        android:layout_above="@+id/info2"
        android:layout_toRightOf="@+id/info5"
        android:layout_toEndOf="@+id/info5" />


    <ImageButton
        android:id="@+id/ib3"
        android:hapticFeedbackEnabled="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="invisible"
        android:src="@drawable/right"
        android:layout_above="@+id/seekBarX"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:context=".MainActivity"
        android:id="@+id/connection">

        <Button
            android:id="@+id/disconnect"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Disconnect"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:id="@+id/tv1"
            android:visibility="visible"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:hint="No Device Selected."
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_toRightOf="@+id/disconnect"
            android:layout_toEndOf="@+id/disconnect" />

        <TextView
            android:id="@+id/tv"
            android:visibility="visible"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:hint="You are not connected."
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:layout_below="@+id/tv1"
            android:layout_toRightOf="@+id/disconnect"
            android:layout_toEndOf="@+id/disconnect" />

        <CheckBox
            android:id="@+id/buttonValues"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Use Classic Controls"
            android:visibility="visible"
            android:layout_below="@+id/disconnect"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

    </RelativeLayout>

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="invisible"

        android:id="@+id/info2"
        android:background="@color/transparent"
        android:src="@drawable/ic_rightinfo"
        android:layout_alignBottom="@+id/ib4"
        android:layout_toLeftOf="@+id/ib4"
        android:layout_toStartOf="@+id/ib4"
        android:layout_alignTop="@+id/info3" />
    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="invisible"

        android:id="@+id/info3"
        android:background="@color/transparent"
        android:src="@drawable/ic_rightinfo"
        android:layout_above="@+id/ib2"
        android:layout_toLeftOf="@+id/ib3"
        android:layout_toStartOf="@+id/ib3"
        android:layout_alignTop="@+id/ib3" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="invisible"

        android:id="@+id/info4"
        android:background="@color/transparent"
        android:src="@drawable/ic_rightinfo"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/ib1"
        android:layout_alignStart="@+id/ib1" />
    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="invisible"

        android:id="@+id/info5"
        android:background="@color/transparent"
        android:src="@drawable/ic_infodown" />
    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="invisible"

        android:id="@+id/info6"
        android:background="@color/transparent"
        android:src="@drawable/ic_infodown"
        android:layout_alignTop="@+id/info5"
        android:layout_toLeftOf="@+id/info5"
        android:layout_alignLeft="@+id/info7"
        android:layout_alignStart="@+id/info7" />
    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="invisible"

        android:id="@+id/info7"
        android:background="@color/transparent"
        android:src="@drawable/ic_infoleft" />

    <SeekBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="20dp"
        android:paddingLeft="40dp"
        android:id="@+id/seekBarX"
        android:layout_alignLeft="@+id/info2"
        android:layout_alignStart="@+id/info2"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_alignTop="@+id/seekBar" />
    <SeekBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="40dp"
        android:paddingRight="40dp"
        android:id="@+id/seekBarY"
        android:visibility="invisible"
        android:layout_above="@+id/speed"
        android:layout_toRightOf="@+id/ib1"
        android:layout_toLeftOf="@+id/ib4"
        android:layout_toStartOf="@+id/ib4" />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/speed"
        android:layout_below="@+id/ib1"
        android:layout_toRightOf="@+id/ib1"
        android:layout_toLeftOf="@+id/ib4"
        android:layout_toStartOf="@+id/ib4"
        android:orientation="horizontal"></LinearLayout>

    <Button
        android:id="@+id/bhit"
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:text="Reset"
        android:hapticFeedbackEnabled="true"
        android:layout_alignParentBottom="true"
        android:layout_toLeftOf="@+id/seekBarX"
        android:layout_toStartOf="@+id/seekBarX" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/checkboxAcc"
        android:text="Use Accelerometer"
        android:layout_alignTop="@+id/ib1"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <SeekBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="40dp"
        android:paddingRight="40dp"
        android:rotationY="90"
        android:id="@+id/seekBar"
        android:layout_above="@+id/ib2"
        android:layout_toRightOf="@+id/ib2"
        android:layout_toLeftOf="@+id/ib4"
        android:layout_toStartOf="@+id/ib4" />

</RelativeLayout>
